<div class = "container">

  <div class = "results-display">
      <% if @users == nil || @users == [] %>
        <h5> No seamstress found near <%= params[:address] %> </h5>
      <% else %>
        <h5> Found <%= @users.size %> seamstresses near you! </h5>
      <% end %>
  </div>

  <div class="seamstress-cards-container">
    <div class="seamstress-index">
        <% @users.each do |user|%>
          <%= render "shared/seamstress_card", user: user %>
      <% end %>
    </div>

  <div id="map-position" style="width: 100%; height: 60vh;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>

  </div>
</div>
